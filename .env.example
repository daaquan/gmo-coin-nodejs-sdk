# ====== SDK Configuration ======
# Forex API Credentials
FX_API_KEY=your-fx-api-key-here
FX_API_SECRET=your-fx-api-secret-here

# Crypto API Credentials
CRYPTO_API_KEY=your-crypto-api-key-here
CRYPTO_API_SECRET=your-crypto-api-secret-here

# ====== Service Configuration ======
# Server settings
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Proxy configuration (if behind a reverse proxy)
TRUST_PROXY=false

# ====== Authentication ======
# Service authentication mode: 'jwt' or 'shared' (default: disabled)
SERVICE_AUTH_MODE=disabled

# For JWT mode:
# JWKS_URL=https://your-jwks-provider.com/.well-known/jwks.json
# JWT_ISSUER=https://your-issuer.com
# JWT_AUDIENCE=your-service-name

# For shared secret mode:
# SERVICE_AUTH_TOKEN=your-shared-secret-here

# ====== Redis Configuration ====== (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====== Multi-tenant Configuration ======
# TENANT_ID=default
# TENANT_CREDENTIALS_JSON={"default": {"apiKey": "...", "secret": "..."}}
